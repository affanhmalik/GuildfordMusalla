<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mainpage_title"
        android:id="@+id/mainpage_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/pr_table_textsize"
        android:text="@string/prTimes_heading"
        android:id="@+id/mainpage_subtitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:useDefaultMargins="true"
        android:nestedScrollingEnabled="true"
        >

        <TextView
            style="@style/pr_table_col0"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/pr1"

            />

        <TextView
            style="@style/pr_table_col0"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/pr2"

            />
        <TextView
            style="@style/pr_table_col0"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/pr3"

            />
        <TextView
            style="@style/pr_table_col0"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/pr4"

            />
        <TextView
            style="@style/pr_table_col0"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/pr5"

            />

        <TextView
            style="@style/pr_table_col1"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/prt1"
            />

        <TextView
            style="@style/pr_table_col1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/prt2"
            />

        <TextView
            style="@style/pr_table_col1"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/prt3"
            />

        <TextView
            style="@style/pr_table_col1"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/prt4"
            />

        <TextView
            style="@style/pr_table_col1"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/prt5"
            />


        </GridLayout>




</LinearLayout>

